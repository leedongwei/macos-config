[credential]
  helper = osxkeychain
[commit]
  gpgsign = true
[gpg]
  program = /usr/local/bin/gpg
[core]
  excludesfile = ~/.gitignore_global
  editor = /usr/bin/vim
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true

[apply]
  whitespace = strip
[diff]
  algorithm = patience
[rerere]
  enabled = 1

[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
