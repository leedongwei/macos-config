[alias]
  br = branch
  co = checkout
  cm = commit
  df = diff
  lg = log
  st = status
  ignore = update-index --assume-unchanged
  unignore = update-index --no-assume-unchanged
  ignored = !git ls-files -v | grep "^[[:lower:]]"

[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

# Use `origin` as the default remote on the `master` branch in all cases
[branch "master"]
  remote = origin
  merge = refs/heads/master

[user]
  name = Danny Lee
  email = danny@dongwei.li
  signingkey = 9220DE3141D18262
[credential]
  helper = osxkeychain
[commit]
  gpgsign = true
[gpg]
  program = gpg
[core]
  excludesfile = ~/.gitignore_global
  editor = /usr/bin/vim
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
